@model Todo;    
@{
    ViewData["Title"] = "Add todo";
}
<form  method="post" >
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Add Todo</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div>
            <button type="submit" class="btn btn-primary" style="width: 150px;">Add</button>
            
        </div>
    </div>
</form>
    
